<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/contact_head_invitation_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/ease_new_friends_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:gravity="center"
            android:text="邀请好友"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        
        <ImageView
            android:id="@+id/contact_head_invitation_iv_redPoint"
            android:background="@android:drawable/ic_notification_overlay"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_head_group_ll"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/em_create_group"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="群组"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>